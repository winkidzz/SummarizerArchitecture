# Semantic Pattern Query App - Environment Configuration Template
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: API Keys
# ============================================================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# Embedding Models Configuration
# ============================================================================
# Gemini embedding model (768 dimensions)
GEMINI_EMBEDDING_MODEL=models/embedding-001

# Ollama embedding model (must support embeddings, e.g., nomic-embed-text)
OLLAMA_MODEL=nomic-embed-text

# Ollama generation/chat model (for text generation)
OLLAMA_GENERATION_MODEL=qwen3:14b

# Ollama API endpoint
OLLAMA_BASE_URL=http://localhost:11434

# Default embedder to use: "ollama" or "gemini"
QUERY_EMBEDDER_TYPE=ollama

# ============================================================================
# Service URLs (Required if using vector search and caching)
# ============================================================================
# Qdrant vector database
QDRANT_URL=http://localhost:6333

# Elasticsearch for BM25 search
ELASTICSEARCH_URL=http://localhost:9200

# Redis for semantic caching (optional)
REDIS_HOST=localhost
REDIS_PORT=6380

# ============================================================================
# Data Paths
# ============================================================================
# Path to your pattern library documents
PATTERN_LIBRARY_PATH=../pattern-library

# Calibration matrices for embedding alignment (optional, for better accuracy)
EMBEDDING_ALIGNMENT_MATRIX_PATH_GEMINI=alignment_matrix_gemini.npy
EMBEDDING_ALIGNMENT_MATRIX_PATH_OLLAMA=alignment_matrix_ollama.npy
EMBEDDING_ALIGNMENT_MATRIX_PATH=alignment_matrix.npy

# ============================================================================
# Optional: Advanced Configuration
# ============================================================================
# Local embedding model for initial retrieval (384 dimensions)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L12-v2

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging Level
LOG_LEVEL=INFO
