# AI Summarization Reference Architecture - Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it contains secrets!

# ============================================================================
# AI Model API Keys
# ============================================================================

# Anthropic Claude API (optional - for LLM-powered analysis in Claude Skills)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (optional - for Azure OpenAI patterns)
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here

# Azure OpenAI (optional - for Azure-specific patterns)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-10-21

# Google Cloud (optional - for Vertex AI patterns)
# Set up Application Default Credentials or use service account key
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# AWS Bedrock (optional - for AWS patterns)
# Use AWS CLI configuration or IAM roles
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# ============================================================================
# Research Monitoring Configuration
# ============================================================================

# arXiv API Configuration
# Email for polite usage (optional but recommended)
# arXiv requests that API users identify themselves
ARXIV_EMAIL=your-email@example.com

# Research monitoring schedule (if using custom scheduling)
RESEARCH_MONITOR_DAYS_BACK=7
RESEARCH_MONITOR_MIN_RELEVANCE=0.5

# ============================================================================
# Vector Database Configuration
# ============================================================================

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=research_papers

# Embedding Model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================================================
# Healthcare Data Integration (Optional)
# ============================================================================

# Google Cloud Healthcare API (FHIR)
GCP_HEALTHCARE_DATASET_ID=your-dataset-id
GCP_HEALTHCARE_FHIR_STORE_ID=your-fhir-store-id
GCP_HEALTHCARE_LOCATION=us-central1

# AWS HealthLake (FHIR)
AWS_HEALTHLAKE_DATASTORE_ID=your-datastore-id

# Azure Health Data Services (FHIR)
AZURE_FHIR_URL=https://your-fhir-service.azurehealthcareapis.com
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret

# ============================================================================
# BigQuery / Data Warehouse Configuration (Optional)
# ============================================================================

BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET_ID=your-dataset-id
BIGQUERY_LOCATION=US

# Cloud Spanner (for analytics)
SPANNER_INSTANCE_ID=your-instance-id
SPANNER_DATABASE_ID=your-database-id

# ============================================================================
# Notification Configuration (Optional)
# ============================================================================

# Slack Webhook for research monitor notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications (using SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
NOTIFICATION_EMAIL_TO=notifications@example.com

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=False

# ============================================================================
# Security Configuration
# ============================================================================

# Encryption key for sensitive data (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here

# JWT secret for API authentication (if implementing API)
JWT_SECRET=your_jwt_secret_here

# API rate limiting
API_RATE_LIMIT=100  # requests per minute

# ============================================================================
# CI/CD Configuration (for GitLab CI/CD)
# ============================================================================

# Set these as CI/CD variables in GitLab, not in .env

# ANTHROPIC_API_KEY (masked)
# SLACK_WEBHOOK_URL (masked)
# ARXIV_EMAIL (not masked)

# ============================================================================
# Development Tools (Optional)
# ============================================================================

# Ollama API endpoint (if using local LLM)
OLLAMA_API_BASE=http://localhost:11434

# LangSmith (LangChain tracing - optional)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=ai-summarization-project

# ============================================================================
# Notes
# ============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. Ensure .env is in .gitignore (it is by default)
# 4. For production, use secrets management (AWS Secrets Manager, GCP Secret Manager, etc.)
# 5. For CI/CD, use GitLab CI/CD variables (Settings > CI/CD > Variables)
# 6. Rotate API keys regularly
# 7. Use least-privilege IAM roles/policies

# ============================================================================
# Minimal Configuration for Research Monitoring
# ============================================================================

# To run research monitoring with minimal configuration, you only need:
# - ARXIV_EMAIL (optional but recommended)
# - All other services are optional depending on which patterns you're using

# Example minimal .env:
# ARXIV_EMAIL=your-email@example.com
# CHROMA_DB_PATH=./chroma_db
# LOG_LEVEL=INFO
